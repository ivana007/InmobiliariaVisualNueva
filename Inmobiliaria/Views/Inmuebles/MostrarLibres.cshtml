@model IEnumerable<Inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "MostrarLibres";
}

<h1>MostrarLibres</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="MostrarLibres">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Fecha Alta</label>
                <input type="date" name="fechaAlta" class="form-control" />
                <label class="control-label">Fecha Baja</label>
                <input type="date" name="fechaBaja" class="form-control" />

            </div>

            <div class="form-group">
                <input type="submit" value="buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <p>@ViewData["cartel"]</p> 
</div>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoInmueble)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantHambientes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoInmueble)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantHambientes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            
            
        </tr>
}
    </tbody>
</table>
